@model LoginViewModel
<div>
    <h1>Вход в личный кабинет</h1>
    <div class="div-box form-outline mb-4">
        <form asp-area="" asp-controller="Account" asp-action="Login" method="post" asp-route-returnUrl="@ViewBag.returnUrl">
            <div asp-validation-summary="All"></div>
            <div>
                <label class="form-label" asp-for="UserName"></label>
                <input class="form-control" asp-for="UserName" />
                <span asp-validation-for="UserName"></span>
            </div>
            <div>
                <label class="form-label" asp-for="Password"></label>
                <input class="form-control" asp-for="Password" />
                <span asp-validation-for="Password"></span>
            </div>
            <div class="form-check">
                <label class="form-check-label" asp-for="RememberMe"></label>
                <input class="form-check-input" type="checkbox" asp-for="RememberMe" checked  />
                <span asp-validation-for="RememberMe"></span>
            </div>
            <div>
                <input type="submit" value="Войти" class="btn btn-primary btn-block mb-4" style="margin-top: 25px;"/>
            </div>
        </form>
    </div>
</div>